<div class="card border-dark m-3 p-4">
    <h3><%= @post.title %></h3>
    <p><%= post_status(@post) %></p>
    <p><%= @post.text %></p>
    <div class="row justify-content-between">
        <div class="col col-md-2">
            <%= link_to 'Edit post', edit_post_path(@post), :class =>'btn btn-secondary'%>
        </div>
        <div class="col col-md-2">
            <%= link_to 'Go back', posts_path, :class =>'btn btn-info'%>
        </div>
    </div>
</div>